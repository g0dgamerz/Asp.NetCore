@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport"content="width=device-width"/>
    <title>Index</title>
</head>
<body>
    <h3>Product Info</h3>
    <table border="1" cellpadding="2" cellspacing="2">
       <tr>
           <th>Id</th>
           <th>Name</th>
           <th>Photo</th>
           <th>Price</th>
           <th>Quantity</th>
           <th>total</th>
       </tr>
        @foreach (var product in ViewBag.products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td><img src="~/images/@product.Photo" alt="Alternate Text" /></td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@(product.Price*product.Quantity)</td>
            </tr>
        }
    </table>
</body>
</html>