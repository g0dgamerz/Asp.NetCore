@{ 
    Layout = null;
}
<!DOCTYPE html>
    <html>
    <head>
        <title></title>
    </head>
    <body>
        <h3>Login Page</h3>
        @ViewBag.error
    <form method="post" asp-controller="account" asp-action="Login">
        <table>
            <tr>
                <td>Username</td>
                <td><input type="text" name="username" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="password" name="password" /></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td><input type="submit" value="Login" /></td>
            </tr>
        </table>
    </form>
    </body>
    </html>